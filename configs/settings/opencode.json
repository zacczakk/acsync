{
  "instructions": [
    "~/.config/opencode/AGENTS.md",
    "~/Vaults/Memory/SOUL.md",
    "~/Vaults/Memory/IDENTITY.md",
    "~/Vaults/Memory/USER.md",
    "~/Vaults/Memory/MEMORY.md"
  ],
  "model": "throttle-tux/claude-opus-4-6",
  "permission": {
    "*": "allow",
    "bash": {
      "*": "allow",
      "rm *": "deny",
      "cat *.env": "deny",
      "cat *.env.*": "deny",
      "cat */.env": "deny",
      "cat */.env.*": "deny",
      "cat */.env.example": "allow",
      "cat ~/.zshrc_secrets": "deny",
      "git push *": "ask",
      "git reset --hard *": "deny"
    },
    "external_directory": {
      "*": "ask",
      "~/Vaults/**": "allow",
      "~/Vaults/Memory/system/grooming-reports/*": "allow",
      "~/.config/opencode/agents/*": "allow",
      "~/.config/opencode/get-shit-done/templates/*": "allow"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
      "~/.zshrc_secrets": "deny",
      "~/.config/opencode/agents/*": "allow",
      "~/.config/opencode/commands/*": "allow",
      "~/.config/opencode/skills/*": "allow"
    }
  },
  "plugin": [
    "opencode-agent-browser"
  ],
  "provider": {
    "uptimize-bedrock": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Uptimize",
      "options": {
        "baseURL": "${UPTIMIZE_BASE_URL_PROD}/model/",
        "apiKey": "${UPTIMIZE_BEDROCK_API_KEY}",
        "headers": {
          "openai-standard": "True"
        }
      },
      "models": {
        "eu.anthropic.claude-sonnet-4-5-20250929-v1:0": {
          "name": "Claude Sonnet 4.5"
        },
        "eu.anthropic.claude-haiku-4-5-20251001-v1:0": {
          "name": "Claude Haiku 4.5"
        }
      }
    },
    "uptimize-foundry": {
      "npm": "@ai-sdk/anthropic",
      "name": "Foundry",
      "options": {
        "baseURL": "{env:ANTHROPIC_BASE_URL}/v1",
        "apiKey": "{env:ANTHROPIC_AUTH_TOKEN}",
        "headers": {
          "Authorization": "Bearer {env:ANTHROPIC_AUTH_TOKEN}"
        }
      },
      "models": {
        "claude-opus-4-6": {
          "name": "Claude Opus 4.6",
          "limit": {
            "context": 180000,
            "output": 64000
          }
        },
        "claude-sonnet-4-6": {
          "name": "Claude Sonnet 4.6",
          "limit": {
            "context": 180000,
            "output": 64000
          }
        },
        "claude-haiku-4-5-20251001": {
          "name": "Claude Haiku 4.5",
          "limit": {
            "context": 180000,
            "output": 64000
          }
        }
      }
    },
    "throttle-tux": {
      "npm": "@ai-sdk/anthropic",
      "name": "Tux",
      "options": {
        "baseURL": "http://127.0.0.1:18080/v1",
        "apiKey": "does-not-matter"
      },
      "models": {
        "claude-opus-4-6": {
          "name": "Claude Opus 4.6",
          "limit": {
            "context": 180000,
            "output": 64000
          }
        },
        "claude-sonnet-4-6": {
          "name": "Claude Sonnet 4.6",
          "limit": {
            "context": 180000,
            "output": 64000
          }
        },
        "claude-haiku-4-5-20251001": {
          "name": "Claude Haiku 4.5",
          "limit": {
            "context": 180000,
            "output": 64000
          }
        }
      }
    }
  }
}